{
  "kind": "Job",
  "apiVersion": "batch/v1",
  "metadata": {
    "name": "taskmaster"
  },
  "spec": {
    "template": {
      "metadata": {
        "name": "taskmaster"
      },
      "spec": {
        "serviceAccountName": "default",
        "containers": [
          {
            "name": "taskmaster",
            "image": "eu.gcr.io/tes-wes/taskmaster:v0.0.5.2",
            "args": [
              "$(JSON_INPUT)"
            ],
            "env": [
              {
                "name": "JSON_INPUT",
                "value": ""
              },
              {
                "name": "TESK_FTP_USERNAME",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "ftp-secret",
                    "key": "username",
                    "optional": true
                  }
                }
              },
              {
                "name": "TESK_FTP_PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "ftp-secret",
                    "key": "password",
                    "optional": true
                  }
                }
              },
              {
                "name": "TESK_S3_ACCESS_KEY",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "s3-secret",
                    "key": "access_key",
                    "optional": true
                  }
                }
              },
              {
                "name": "TESK_S3_SECRET_KEY",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "s3-secret",
                    "key": "secret_key",
                    "optional": true
                  }
                }
              }
            ],
            "volumeMounts": [
              {
                "name": "podinfo",
                "mountPath": "/podinfo",
                "readOnly": true
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "podinfo",
            "downwardAPI": {
              "items": [
                {
                  "path": "labels",
                  "fieldRef": {
                    "fieldPath": "metadata.labels"
                  }
                }
              ]
            }
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}
